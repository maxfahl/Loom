{
  "_comment": "This is the Stryker configuration for the react-component example.",
  "mutate": [
    "src/**/*.tsx",
    "!src/**/*.d.ts"
  ],
  "testRunner": "jest",
  "mutator": {
    "plugins": [
      "typescript"
    ]
  },
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "coverageAnalysis": "perTest",
  "jest": {
    "projectType": "react",
    "config": {
      "testEnvironment": "jsdom",
      "roots": [
        "<rootDir>/test"
      ],
      "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
      },
      "setupFilesAfterEnv": [
        "@testing-library/jest-dom/extend-expect"
      ]
    }
  },
  "thresholds": {
    "break": 80,
    "high": 90,
    "low": 60
  }
}
